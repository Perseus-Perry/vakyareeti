<%- include("partials/header"); -%>
<title>Compose|VR</title>
<link rel="stylesheet" href="/css/compose.css">
<link href="/css/post.css" rel="stylesheet">
<head>
<body id="body">
<%- include("partials/nav"); -%>

<div id="cont1" class="container" hidden>
  <div id="seriesName" >
    <h1 class="card-title compose ">New Series</h1>
    <form method="post" action="/newSeries">
      <input class="form-control card-title title-box" type="text" name="seriesName" placeholder="Series Name">
    </form>
  </div>
</div>

<div id="mainn" class="ml-4 mr-4">
  <h1 class="card-title compose align-center mt-5">Compose</h1>
  <div class="row">
    <div class="col-3">
      <div class="p-2 mb-2 bg-light rounded">
        <span onclick="newSeries()" class="new-series">
          <i class="fa fa-plus"></i> New Series
        </span>
      </div>
    </div>
    <div class="col-9">
      <form action="/compose" method="post">
        <input class="form-control card-title title-box" type="text" name="title" placeholder="Title">
        <textarea class="lined form-control card-text body-box"
        name="post" rows="8" cols="80" style="white-space: pre-wrap" placeholder="Content"></textarea>
        <br>
        <button class="btn btn-sm btn-outline-secondary post" type="submit" name="submit">Post</button>
      </form>
    </div>

</div>

<script src="/js/compose.js"></script>
<%- include("partials/footer"); -%>
