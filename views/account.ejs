<%- include("partials/header"); -%>

<title></title>
<link rel="stylesheet" href="/css/account.css">
</head>
<body>
<%- include('partials/nav'); -%>

  <div class="container">

    <h1 class="card-title mt-5 ml-2">Settings</h1>


    <h4 class="card-subtitle mt-5">Profile Picture</h4>


    <div class="card mt-4">
      <div class="card-body" style="clear: both">
        <img class="profile-pic" style="float:left"
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRX_DVrY9UceXMt2dRaXNUH4-SwbByQVH78P3WenaduRcbDgkP9&usqp=CAU">
        <div style="float:left" class="mt-4 ml-3">
          <button type="button" class="btn btn-sm btn-outline-secondary mt-2" name="button">Update Profile Picture</button>
          <p class="text-muted mt-2">Must be JPEG, PNG, or GIF and cannot exceed 10MB.</p>
        </div>
      </div>
    </div>


    <h4 class="card-subtitle mt-5">Profile Banner</h4>
    <div class="mt-4">
      <div class="card">
        <div class="card-body" >
          <div style="clear: both">
            <img class="banner-pic" style="float:left" src="https://i.pinimg.com/originals/9e/06/e7/9e06e76998c8b84ce2214feaa153ce44.png">
            <div style="float:left" class="mt-4 ml-3">
              <button type="button" class="btn btn-sm btn-outline-secondary mt-2" name="button">Update Profile Banner</button>
              <p class="text-muted mt-2">File format: JPEG, PNG, GIF (recommended 1200x480, max 10MB)</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <h4 class="card-subtitle mt-5">Profile Settings</h4>
    <h6 class="text-muted mt-1">Change identifying details for your account</h6>


    <div class="card mt-4">
      <div class="card-body" >
        <div class="row">
          <div class="col-1">
            <p class="card-subtitle username-text vertical-center">Username</p>
          </div>
          <div class="col-11">
            <div class="username-div mt-4 ml-3">
              <input type="text" class="username-box" width="250"/>
              <p class="text-muted mt-2">You may update your username</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body" >
        <div class="vertical-center">
          <p class="card-subtitle username-text">Bio</p>
        </div>
        <div class="username-div mt-4 ml-3">
          <textarea class="bio-box" style="width:87%"></textarea>
          <p class="text-muted mt-2">Who you are in fewer than 300 characters</p>
        </div>
      </div>
    </div>



    <h4 class="card-subtitle mt-5">Disabling Your Account</h4>
    <h6 class="text-muted mt-1">Completely deactivate your account</h6>

    <div class="card mt-4">
      <div class="card-body" >
        <div class="vertical-center">
          <p class="card-subtitle username-text" style="float:left">Disable Your Account</p>
        </div>
        <div style="float:left" class="disable-div mt-4">
          <button type="button" class="btn btn-sm btn-outline-secondary" name="button">Disable Account</button>
          <p class="text-muted mt-2">Password confirmation required</p>
        </div>
      </div>
    </div>


  </div>

</body>
<%- include("partials/footer"); -%>
