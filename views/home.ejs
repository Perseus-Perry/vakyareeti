<!-- Page Content -->
<div class="container-fluid">

  <div class="row">

    <div class="col-lg-3">
      <%- include("partials/sidebar"); -%>
    </div>
    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

      <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <div class="carousel-item active">
            <img class="d-block img-fluid" src="http://placehold.it/1000x400" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="http://placehold.it/1000x400" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block img-fluid" src="http://placehold.it/1000x400" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="row">


      <% for(var i=0;i<posts.length;i++) {%>
      <div class="col-lg-3 col-md-4 mb-3">
        <div class="card h-100">
          <a href="/post/<%=posts[i]._id%>"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href='/post/<%=posts[i]._id%>'><%=posts[i].title%></a>
            </h4>
            <h6 class="card-subtitle">
              <a href="/user/<%=posts[i].username%>">By <%=posts[i].username%></a>
            </h6>
            <% var body = posts[i].body.substring(0, 100) %>
            <% body = body.substring(0,body.lastIndexOf(" ")) + " ...Read More" %>
            <a href="/post/<%=posts[i]._id%>"><p class="card-text"><%=body%></p></a>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-8">
                <p>Votes: 1000</P>
              </div>
              <div class="col-2">
                <a href="#"><i class="fa fa-angle-double-up"></i></a>
              </div>
              <div class="col-2">
                <a href="#"><i class="fa fa-angle-double-down"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%}%>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.col-lg-9 -->

</div>
<!-- /.row -->

<script src="js/script.js">
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>


