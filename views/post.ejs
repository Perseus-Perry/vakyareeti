<%- include("partials/header"); -%>
  <link href="/css/post.css" rel="stylesheet">
<title><%=title%></title>
<link href="https://fonts.googleapis.com/css?family=Ubuntu:wght@300|Montserrat" rel="stylesheet">
</head>

<body>
    <%- include("partials/nav"); -%>

    <div class="button-bar">
      <button class="btn btn-outline-primary" id='upvote' onclick="upvote('<%=id%>')"><i class="fa fa-angle-double-up"></i></button>
      <br>
      <button class="btn btn-outline-primary" id='downvote' onclick="downvote('<%=id%>')"><i class="fa fa-angle-double-down"></i></button>
      <br>
      <button class="btn btn-outline-danger" onclick="sharePost('<%=id%>')"><i class="fa fa-share"></i></button>
    </div>
  <div class="container">

    <div class="row">

      <div class="col-lg-8">

        <h1 class="mt-4 card-title"><%=title%></h1>

        <p class="lead card-subtitle">
          by
          <a href="/user/<%=username%>"><%=username%></a>
        </p>

        <hr>
        <% var datetime = createdAt; %>
        <% var date = datetime.getDate().toString() +"/"+ datetime.getMonth().toString()+"/"+datetime.getFullYear().toString() ; %>
        <% var time = datetime.getHours().toString() +":"+datetime.getMinutes().toString(); %>
        <p class="card-text text-muted">Posted on <%=date%> at <%=time%></p>

        <hr>

        <img class="img-fluid rounded" src="http://placehold.it/800x450" alt="">

        <hr>

        <!-- Post Content -->
        <p class="card-text" style="white-space: pre-wrap"><%=body%></p>

        <hr>
        <p class="votes"><%=votes%></p>
        <button class="btn btn-outline-primary" id='upvote' onclick="upvote('<%=id%>')"><i class="fa fa-angle-double-up"></i></button>
        <button class="btn btn-outline-primary" id='downvote' onclick="downvote('<%=id%>')"><i class="fa fa-angle-double-down"></i></button>
        <button class="btn btn-outline-primary" onclick="sharePost('<%=id%>')"><i class="fa fa-share"></i></button>

      </div>

      <div class="col-md-4">
        <%- include("partials/sidebar"); -%>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <script src="/js/socket.io.js"></script>
  <script src="/js/vote.js"></script>
  <%- include("partials/footer"); -%>
